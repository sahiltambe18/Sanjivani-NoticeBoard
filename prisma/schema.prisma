generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admins {
  id           String  @id @default(uuid()) @map("_id")
  email        String  @unique
  isSuperAdmin Boolean @default(false)
  password     String
}

model Notices {
  id        String   @id @default(uuid()) @map("_id")
  title     String?
  points    String[]
  createdAt DateTime @default(now())
  imageUrl  String?
  videoUrl  String?
  department String @default("toAll")
}
